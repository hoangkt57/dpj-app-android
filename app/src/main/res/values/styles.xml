<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="colorError">@color/color_error</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="materialCalendarFullscreenTheme">@style/DateRangePicker</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="CourseActivity" parent="AppTheme">

    </style>

    <style name="LoginField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Edittext.SmallComponent</item>
    </style>

    <style name="ChangePasswordField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="FilterButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button.CircleComponent</item>
        <item name="backgroundTint">@color/home_filter_bg</item>

    </style>

    <style name="TextAppearance.Tab.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="DateRangePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Calendar.MediumComponent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="materialCalendarHeaderToggleButton">@style/HeaderToggleButton</item>
    </style>

    <style name="HeaderToggleButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@color/button_ripple</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

    </style>

    <style name="Button.IconOnly" parent="Base.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">-1dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>

    </style>

    <style name="Submission.Button.IconText" parent="Base.Button">
        <item name="iconPadding">6dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_primary_variant</item>
        <item name="android:textColor">@color/color_primary_variant</item>
        <item name="iconTint">@color/color_primary_variant</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/color_home_bg</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Submission.Button.Text" parent="Base.Button">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/color_home_bg</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FullScreenDialog" parent="">
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>